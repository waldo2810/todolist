<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(item => { %>
  <div class="item">
    <input class="checkbox" name="delete" type="checkbox" />
    <p><%= item.name %></p>
    <form class="trash-form" action="/delete" method="post">
      <button type="submit" class="trash-btn" name="trashcan" value="<%= item._id %> ">
        <i class="fa-solid fa-trash"></i>
      </button>
      <input type="hidden" name="listName" value="<%= listTitle %> " />
    </form>
  </div>
  <% }) %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
    <button type="submit" name="list" value="<%= listTitle %> " class="plus">+</button>
  </form>
</div>
<%- include("footer") -%>
<script src="https://kit.fontawesome.com/c6b08b55aa.js" crossorigin="anonymous"></script>
